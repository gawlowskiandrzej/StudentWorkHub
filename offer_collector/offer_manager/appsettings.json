{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "StaticSettings": {
        "NumberOfAvailablePortals": "4",
        "JobsTimeoutMinutes": "1"
    },
  "DatabaseSettings": {
    "Host": "db_offers",
    "Port": 5432,
    "Database": "offers",
    "Username": "postgres",
    "Password": "[DB_OFFERS_PASSWORD]"
  },
    "GeneralDatabaseSettings": {
        "Host": "db_general",
        "Port": 5432,
        "Database": "general",
        "Username": "app_user",
        "Password": "[DB_GENERAL_PASSWORD]"
    },
    "AuthTokenSettings":{
        "Issuer": "StudentWorkHub",
        "Audience": "StudentWorkHub.Api.User",
        "signingKey": null,
        "accessTokenTtlHours": 2.0,
        "clockSkewSeconds": 30.0
    },
    "PasswordPolicySettings": {
        "MinLength": 12,
        "MaxLength": 128,
        "RequireUppercase": false,
        "RequireLowercase": false,
        "RequireDigit": false,
        "RequireNonAlphanumeric": false,
        "RequiredUniqueChars": 4,
        "AllowedSpecialCharacters": "!@#$%^&*()-_=+[]{};:,.<>?",
        "KnownPasswordsListPath": null
    },
    "RedisServer": {
        "Host": "redis",
        "Port": 6379
    },
    "ApiKeys": {
        "GeminiKey": "[GEMINI_API_KEY]"
    },
    "Frontend": {
        "PortProdApi": 7044,
        "PortDevApi": 5059,
        "IpProdApi": "localhost",
        "IpDevApi": "localhost",
        "PortDev": 4000,
        "IpDev": "localhost"
    }
}
